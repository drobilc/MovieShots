<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="24dp">

    <ImageView
        android:id="@+id/movie_cover"
        android:layout_width="96dp"
        android:layout_height="144dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical"
        android:background="@color/colorMovieCover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_suggestion_default"
            android:textSize="22sp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/movie_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A thief who steals corporate secrets through the use of dream-sharing technology is given the inverse task of planting an idea into the mind of a C.E.O."
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_light"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/movie_additional_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 4.87 - 90 reviews"
            android:textColor="@color/colorSecondaryText"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_light"/>

    </LinearLayout>

</LinearLayout>